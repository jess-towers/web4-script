{
  "name": "tortuga-csv-processor",
  "version": "1.0.0",
  "description": "Aplicaci√≥n de escritorio para procesar CSV de transacciones y cargar a DailySales.",
  "main": "dist/main.js",
  "scripts": {
    "start": "electron .",
    "dev": "npx tsc && npx electron dist/main.js",
    "build": "npx tsc && npx electron-builder --windows",
    "setup": "node setup-production.js",
    "postinstall": "npx prisma generate",
    "prisma:generate": "npx prisma generate",
    "prisma:push": "npx prisma db push",
    "postpack": "copyfiles --up 3 node_modules/@prisma/engines/**/* release/${build.productName}-win32-x64/resources/app/node_modules/@prisma/engines && copyfiles --up 3 node_modules/.prisma/client/**/* release/${build.productName}-win32-x64/resources/app/node_modules/.prisma/client"
  },
  "keywords": [],
  "author": "Your Name",
  "license": "ISC",
  "devDependencies": {
    "@types/node": "^20.14.9",
    "copyfiles": "^2.4.1",
    "electron": "^31.0.1",
    "electron-builder": "^24.13.3",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.3"
  },
  "dependencies": {
    "@prisma/client": "^6.10.1",
    "csv-parse": "^5.6.0",
    "dotenv": "^16.4.5",
    "prisma": "^6.10.1"
  },
  "build": {
    "appId": "com.tortuga.csvprocessor",
    "productName": "Procesador de Transacciones CSV",
    "directories": {
      "output": "release"
    },
    "files": [
      "dist/**/*",
      "index.html",
      "prisma/schema.prisma",
      "src/config/prisma-client.ts",
      "src/icon/Group 10.svg",
      "src/icon/Group-10.ico"
    ],
    "icon": "src/icon/Group-10.ico",
    "win": {
      "target": "nsis",
      "icon": "src/icon/Group-10.ico"
    },
    "nsis": {
      "oneClick": false,
      "allowToChangeInstallationDirectory": true
    },
    "extraResources": [
      {
        "from": "node_modules/.prisma/client",
        "to": "node_modules/.prisma/client",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": "node_modules/@prisma/client/runtime",
        "to": "node_modules/@prisma/client/runtime",
        "filter": [
          "**/*"
        ]
      },
      {
        "from": ".env",
        "to": ".env"
      }
    ]
  }
}
